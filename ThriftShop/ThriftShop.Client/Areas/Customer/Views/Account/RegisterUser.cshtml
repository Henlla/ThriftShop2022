@using ThriftShop.Client.Areas.Customer.Models.AccountModel;
@model AccountCollection;

@{
    ViewData["Title"] = "RegisterUser";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}
<body class="template-color-1">
    <div class="loading">
        <div class="text-center middle">
            <span class="loader">
                <span class="loader-inner"></span>
            </span>
        </div>
    </div>
    <div class="breadcrumb-area">
        <div class="container">
            <div class="breadcrumb-content">
                <h2>Shop Related</h2>
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li class="active">Login Or Register</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="kenne-login-register_area">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-md-4 col-xs-4 col-lg-4"></div>
                <div class="col-sm-4 col-md-4 col-xs-4 col-lg-4">
                    <form asp-action="RegisterUser" id="registerForm" asp-controller="Account" asp-area="Customer">
                        <div class="login-form">
                            <h4 class="login-title text-center">Register</h4>
                            <div class="row">
                                <div class="col-md-6 col-12 mb--20">
                                    <label>Full Name</label>
                                    <input type="text" asp-for="UserInfo.Name" placeholder="First Name">
                                    <span style="color:red;" asp-validation-for="UserInfo.Name"></span>
                                </div>
                                <div class="col-md-6 col-12 mb--20">
                                    <label>Gender</label>
                                    <div class="float-start">
                                        <input checked type="radio" name="gender" value="Male">
                                        <label for="Male">Male</label>
                                    </div>
                                    <div class="float-end">
                                        <input type="radio" name="gender" value="Female">
                                        <label for="Female">Female</label>
                                    </div>
                                </div>
                                 <div class="col-md-6 col-12 mb--20">
                                    <label>Address</label>
                                    <input type="text" asp-for="UserInfo.Address" placeholder="Address">
                                    <span style="color:red;" asp-validation-for="UserInfo.Address"></span>
                                </div>
                                <div class="col-md-6 col-12 mb--20">
                                    <label>City</label>
                                    <input type="text" asp-for="UserInfo.City" placeholder="City">
                                    <span style="color:red;" asp-validation-for="UserInfo.City"></span>
                                </div>
                                <div class="col-md-6 col-12 mb--20">
                                    <label>State</label>
                                    <input type="text" asp-for="UserInfo.State" placeholder="State">
                                    <span style="color:red;" asp-validation-for="UserInfo.State"></span>
                                </div>
                                <div class="col-md-6 col-12 mb--20">
                                    <label>ZipCode</label>
                                    <input type="text" asp-for="UserInfo.PostalCode" placeholder="ZipCode">
                                    <span style="color:red;" asp-validation-for="UserInfo.PostalCode"></span>
                                </div>
                                <div class="col-md-12">
                                    <label>Phone Number</label>
                                    <input type="number" asp-for="UserInfo.Phone" placeholder="Phone Number">
                                    <span style="color:red;" asp-validation-for="UserInfo.Phone"></span>
                                </div>
                                <div class="col-md-12">
                                    <label>Email Address</label>
                                    <input type="email" asp-for="UserInfo.Email" placeholder="Email Address">
                                    <span style="color:red;" asp-validation-for="UserInfo.Email"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>UserName</label>
                                    <input type="text" asp-for="UserAccount.Username" placeholder="Username">
                                    <span style="color:red;" asp-validation-for="UserAccount.Username"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Password</label>
                                    <input type="password" asp-for="UserAccount.NewPassword" placeholder="Password">
                                    <span style="color:red;" asp-validation-for="UserAccount.NewPassword"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Confirm Password</label>
                                    <input type="password" asp-for="UserAccount.ConfirmPass" placeholder="Confirm Password">
                                    <span style="color:red;" asp-validation-for="UserAccount.ConfirmPass"></span>
                                </div>
                                <hr />
                                <div class="text-center">
                                    <a asp-action="LoginUser" asp-controller="Account" asp-area="Customer">Already have account?</a>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="kenne-register_btn" style="margin-left:50%; transform:translateX(-50%); margin-top:20px">Register</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-sm-4 col-md-4 col-xs-4 col-lg-4"></div>
            </div>
        </div>
    </div>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
