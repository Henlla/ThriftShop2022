@model ThriftShop.Models.UserAccount;
<body class="template-color-1">
    <div class="loading">
        <div class="text-center middle">
            <span class="loader">
                <span class="loader-inner"></span>
            </span>
        </div>
    </div>
    <div class="breadcrumb-area">
        <div class="container">
            <div class="breadcrumb-content">
                <h2>Shop Related</h2>
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li class="active">Login Or Register</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="kenne-login-register_area">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-md-4 col-xs-4 col-lg-4"></div>
                <div class="col-sm-4 col-md-4 col-xs-4 col-lg-4">
                    <form asp-action="LoginUser" asp-controller="Account" id="loginForm">
                        <div class="login-form">
                            <h4 class="login-title text-center">Login</h4>
                            <div class="row">
                                <div class="col-md-12 col-12">
                                    <label>User Name</label>
                                    <input type="text" asp-for="Username" placeholder="User Name">
                                    <span style="color:red;" asp-validation-for="Username"></span>
                                </div>
                                <div class="col-12 mb--20">
                                    <label>Password</label>
                                    <input type="password" asp-for="Password" placeholder="Password">
                                    <span style="color:red;" asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <hr />
                            <div class="text-center">
                                Don't have account? <a asp-action="RegisterUser" asp-controller="Account" asp-area="Customer">Register</a>
                            </div>
                            <div>
                                <button type="submit" class="kenne-login_btn" style="margin-left:50%; transform:translateX(-50%); margin-top:20px">Login</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-sm-4 col-md-4 col-xs-4 col-lg-4"></div>
            </div>
        </div>
    </div>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }